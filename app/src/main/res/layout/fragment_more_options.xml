<!-- res/layout/fragment_more_options.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Opción 1: Info de Cuentas -->
    <TextView
        android:id="@+id/option_hitoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historia_del_dolar"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_graph_24"
        app:drawableTint="?attr/colorPrimary" /> <!-- CAMBIO: Añadido para colorear el ícono -->

    <!-- Opción 2: Suscripción Premium -->
    <!-- ///OPCION PREMIUN TEMPORAL MENTE ELIMINADO POR POLITICA DE GOOGLE
   <TextView
       android:id="@+id/option_premium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/frgm_payment_title"
       android:drawablePadding="16dp"
       android:padding="16dp"
       android:gravity="center_vertical"
       android:background="?attr/selectableItemBackground"
       android:clickable="true"
       android:focusable="true"
       android:textAppearance="?attr/textAppearanceBody1"
       app:drawableStartCompat="@drawable/premiun"
       app:drawableTint="?attr/colorPrimary" />
       -->
       <!-- CAMBIO: Añadido para colorear el ícono -->

    <!-- Opción 3: Notificaciones -->
    <TextView
        android:id="@+id/option_notificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_notificaciones"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_notificacion"
        app:drawableTint="?attr/colorPrimary" />
    <TextView
        android:id="@+id/option_Configuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configuracion"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_menu_24"
        app:drawableTint="?attr/colorPrimary" />
    <!-- Opción 4: Acerca de -->

    <TextView
        android:id="@+id/btnOpcionContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contactar"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_email_24"
        app:drawableTint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/option_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar App"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_star_24"
        app:drawableTint="?attr/colorPrimary" />
    <!-- Nota: Crea el icono 'ic_star_rate' en Vector Assets -->

    <!-- Separador sutil (Opcional) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider" />

    <!-- Opción 6: Versión y Actualizar -->
    <LinearLayout
        android:id="@+id/option_version_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión Actual"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody1"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_info"
            app:drawableTint="?attr/colorPrimary" />
        <!-- Nota: Crea el icono 'ic_system_update' o 'ic_smartphone' -->

        <TextView
            android:id="@+id/txtVersionApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textSize="12sp"
            android:layout_marginStart="40dp"
            android:textColor="?android:attr/textColorSecondary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toca para buscar actualizaciones"
            android:textSize="10sp"
            android:textStyle="italic"
            android:layout_marginStart="40dp"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>

    <TextView
        android:id="@+id/option_acerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acerca_de"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_info_24"
        app:drawableTint="?attr/colorPrimary" /> <!-- CAMBIO: Añadido para colorear el ícono -->

</LinearLayout>