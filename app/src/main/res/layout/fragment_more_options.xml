<!-- res/layout/fragment_more_options.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Opción 1: Info de Cuentas -->
    <TextView
        android:id="@+id/option_hitoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historia_del_dolar"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableStartCompat="@drawable/ic_graph_24"
        app:drawableTint="?attr/colorPrimary" /> <!-- CAMBIO: Añadido para colorear el ícono -->

    <!-- Opción 2: Suscripción Premium -->
    <!-- ///OPCION PREMIUN TEMPORAL MENTE ELIMINADO POR POLITICA DE GOOGLE
