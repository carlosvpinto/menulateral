<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carlosv.dolaraldia.ui.home.HomeFragment">

    <!--
    PASO 1: Usar un ConstraintLayout como contenedor principal.
    Este layout contendrá tanto la vista de scroll como el banner fijo de abajo.
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_fragment_layout">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainerImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.home.HomeFragment">

                <ImageView
                    android:id="@+id/imgpremium"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="@string/premiun_activa"
                    android:scaleType="fitCenter"
                    android:src="@drawable/premiun_ana"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.903"

                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imglogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="4dp"

                    android:clipToOutline="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logoredondo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/borde"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imglogo"
                    >

                    <!-- Ya no necesitamos el linearLayout4, el contenido va directamente aquí -->

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <!-- Contenedor para la sección USDT -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/txtUsdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tasa_usdt"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ToggleButton
                            android:id="@+id/btnUsdt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/toggle_background"
                            android:button="@drawable/toggle_button"
                            android:checked="false"
                            android:drawableStart="@drawable/ic_bssvg"
                            android:drawablePadding="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@drawable/toggle_text_colors"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtUsdt"
                            app:layout_constraintWidth_percent="0.4" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btnUsdt">

                            <ImageView
                                android:id="@+id/imgflechaUsdt"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_flechaverde"

                                app:layout_constraintBottom_toBottomOf="@+id/txtVariacionUsdt"
                                app:layout_constraintEnd_toStartOf="@+id/txtVariacionUsdt"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/txtVariacionUsdt" />

                            <TextView
                                android:id="@+id/txtVariacionUsdt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="0.0"
                                android:textSize="11sp"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imgflechaUsdt"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText,SmallSp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--
                NUEVA ESTRUCTURA DE COLUMNAS:
                En lugar de 3 filas (títulos, botones, variación), usamos un layout horizontal
                que contiene 3 columnas (BCV, SeekBar, EURO). Es mucho más compacto.
                -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Columna Izquierda (BCV) - AUMENTAMOS EL PESO -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPrecioBcv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tasa_bcv"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <ToggleButton
                                android:id="@+id/btnBcv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toggle_background"
                                android:button="@drawable/toggle_button"
                                android:checked="true"
                                android:drawableStart="@drawable/ic_bssvg"
                                android:drawablePadding="2dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:textColor="@drawable/toggle_text_colors"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imgflechaBcv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:src="@drawable/ic_flechaverde"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"

                                    app:layout_constraintTop_toTopOf="@+id/txtVariacionBcv"
                                    app:layout_constraintBottom_toBottomOf="@+id/txtVariacionBcv"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/txtVariacionBcv" />

                                <TextView
                                    android:id="@+id/txtVariacionBcv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="11sp"
                                    android:layout_marginStart="4dp"


                                    app:layout_constraintStart_toEndOf="@+id/imgflechaBcv"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <!-- Columna Central (SeekBar) - REDUCIMOS EL PESO -->
                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:max="2"
                            android:progress="0"
                            android:thumbTint="?attr/colorPrimary" />

                        <!-- Columna Derecha (EURO) - AUMENTAMOS EL PESO -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtPrecioParalelo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tasa_euro"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <ToggleButton
                                android:id="@+id/btnEuroP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/toggle_background"
                                android:button="@drawable/toggle_button"
                                android:checked="false"
                                android:drawableStart="@drawable/ic_bssvg"
                                android:drawablePadding="4dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:textColor="@drawable/toggle_text_colors"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imgflechaEuro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:src="@drawable/ic_flechaverde"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"

                                    app:layout_constraintTop_toTopOf="@+id/txtVariacionEuro"
                                    app:layout_constraintBottom_toBottomOf="@+id/txtVariacionEuro"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/txtVariacionEuro" />

                                <TextView
                                    android:id="@+id/txtVariacionEuro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="11sp"
                                    android:layout_marginStart="4dp"


                                    app:layout_constraintStart_toEndOf="@+id/imgflechaEuro"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Contenedor para los campos de texto y el botón de comparar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- Columna de los Inputs -->
                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Fila Dólares -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!--
                            ESTILO COMPACTO AÑADIDO:
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            reduce significativamente la altura del campo de texto.
                            -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/edtxtDolares"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/labelDolar"
                                    app:endIconMode="clear_text"
                                    app:startIconDrawable="@drawable/ic_dolar">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/inputDolares"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <ImageView
                                    android:id="@+id/imgCopyDolar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:contentDescription="@string/copiat_monto_dolar"
                                    android:background="@drawable/button_shape"
                                    android:src="@drawable/ic_copy_24" />
                            </LinearLayout>

                            <!-- Fila Bolívares -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/edtxtBolivares"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/labelBolivares"
                                    app:endIconMode="clear_text"
                                    app:startIconDrawable="@drawable/ic_bs_24">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/inputBolivares"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <ImageView
                                    android:id="@+id/imgCoyBolivar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:background="@drawable/button_shape"
                                    android:src="@drawable/ic_copy_24"
                                    android:contentDescription="@string/copiar_monto_bol_vares" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Columna del botón de comparar -->
                        <LinearLayout
                            android:id="@+id/linerIgual"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingStart="4dp">

                            <ImageButton
                                android:id="@+id/imgVerDifBs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="48dp"
                                 android:minHeight="48dp"
                                android:background="@drawable/button_shape"
                                android:src="@drawable/ic_comparar"
                                android:tooltipText="@string/tool_diferencia"
                                android:contentDescription="@string/tool_diferencia"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="@string/actualizacionPara"
                            android:textColor="?attr/colorOnTertiary" />

                        <TextView
                            android:id="@+id/txtFechaActualizacionPara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Date"
                            android:textColor="@color/md_theme_light_surfaceTint"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"

                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:text="@string/actualizacion" />

                        <TextView
                            android:id="@+id/txtFechaActualizacionBcv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Date"
                            android:textSize="12sp"
                            android:textColor="@color/md_theme_light_surfaceTint"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"

                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:text="@string/act_usdt" />

                        <TextView
                            android:id="@+id/txtFechaActualizacionUsdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Date"
                            android:textSize="12sp"
                            android:textColor="@color/md_theme_light_surfaceTint"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutUltActBcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/borde"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/SwUtimaAct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp"
                            android:text="@string/prox_act_dolar_bcv" />

                        <TextView
                            android:id="@+id/txtUltActBcv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textSize="12sp"
                            android:text="Date"
                            android:textColor="@color/md_theme_light_surfaceTint"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgSinConext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/wifi_sin_conect"
                        android:visibility="gone" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnRefres"
                            style="@style/Widget.Material3.FloatingActionButton.Primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/actualizar_tasas"
                            app:elevation="2dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            app:srcCompat="@drawable/ic_refresh_35" />

                        <ProgressBar
                            android:id="@+id/progressBarBoton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:elevation="4dp"
                            android:visibility="gone" />

                    </FrameLayout>


                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swSeleccionApi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Seleccionar api"
                        android:visibility="gone"

                        />
                    <!-- Dentro del layout de tu HomeFragment -->
                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/button_rewarded_ad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp"
                        android:text="Eliminar Anuncios"
                        android:visibility="visible"
                        app:icon="@drawable/eliminar_anun_svg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>


                <!-- El banner y el AdView ya NO van aquí dentro -->

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <!--
        PASO 3: Mover el banner y el AdView FUERA del NestedScrollView.
        Ahora son hijos directos del ConstraintLayout principal.
        Se anclan a la parte inferior del padre (la pantalla).
        -->


        <LinearLayout
            android:id="@+id/LnerPubliImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/adView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/bannerPromocionIos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />




        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_ad_prueba"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            android:descendantFocusability="blocksDescendants">
        </com.google.android.gms.ads.AdView>
        <ImageView
            android:id="@+id/imageSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/swipe_vertical"
            android:visibility="gone"

            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>