<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carlosv.dolaraldia.ui.pagomovil.DatosPerFragment">

    <!-- BOTONES SUPERIORES -->
    <LinearLayout
        android:id="@+id/lnerBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- FORMULARIO DE DATOS (Oculto por defecto) -->
    <LinearLayout
        android:id="@+id/linearLayoutDatosInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/borde"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/lnerBotones"
        tools:layout_editor_absoluteX="0dp">

        <!-- Opciones Radio (Pago Movil / Transf / Zelle) -->
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdioPagoMovil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/pago_movil" />

                <RadioButton
                    android:id="@+id/rdioTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:text="@string/transferencia" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/zelle"
                    android:visibility="gone" />
            </RadioGroup>
        </LinearLayout>

        <!-- Imagen de Perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/white">

                <ImageView
                    android:id="@+id/imgLogoPersona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_agregar_imagen"
                    android:contentDescription="@string/logo_de_la_persona" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Campos Nombre y Telefono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/ic_little_person">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alias"
                    android:inputType="text"
                    android:textSize="13sp"
                    app:endIconMode="clear_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtTlf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/telefono"
                    android:inputType="phone"
                    android:textSize="13sp"
                    app:endIconMode="clear_text" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Spinner Banco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerBanco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background" />
        </LinearLayout>

        <!-- Spinner Letra y Cedula -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerLetra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ci">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cedula_o_rif"
                    android:inputType="number"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- LISTA DE CUENTAS (RECYCLERVIEW) + ESTADO VACIO -->
    <FrameLayout
        android:id="@+id/frameLayoutRecyr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDatosInfo"
        app:layout_constraintBottom_toTopOf="@+id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- La Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyPagoMovil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/spinner_background" />

        <!-- NUEVO: ESTADO VACÍO (EMPTY STATE) -->
        <!-- Se mostrará cuando no haya datos. -->
        <LinearLayout
            android:id="@+id/emptyStateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="?android:attr/colorBackground"
            android:padding="30dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/ic_menu_my_calendar"

                android:alpha="0.7"
                android:contentDescription="@string/icono_lista_vacia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_tienes_cuentas_guardadas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agrega_tus_datos_de_pago_movil_rapidamente"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:alpha="0.7"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btnAgregarDesdeVacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Agregar Primera Cuenta"

                android:textColor="@color/white"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutRecyr"
        app:layout_constraintVertical_bias="0.96"
        tools:layout_editor_absoluteX="0dp">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>