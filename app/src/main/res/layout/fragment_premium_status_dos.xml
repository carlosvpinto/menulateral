<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:clipToPadding="false">

        <!-- TARJETA 1: ESTADO ACTUAL -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#F5F5F5"> <!-- Color base gris -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgStatusIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_lock"
                    app:tint="#757575"
                    android:layout_marginBottom="12dp"
                    tools:src="@drawable/ic_lock" />
                <!-- Usa ic_lock para gratis, y ic_diamond o ic_verified para premium -->

                <TextView
                    android:id="@+id/txtStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo Gratuito"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/txtStatusSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viendo anuncios para apoyar la app"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575"/>

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/txtExpiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin tiempo activo"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TARJETA 2: CANJEAR CÓDIGO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canjear Cupón"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si tienes un código promocional, ingrésalo aquí para activar beneficios."
                    android:textSize="13sp"
                    android:layout_marginBottom="16dp"
                    android:textColor="?android:attr/textColorSecondary"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCode"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Código (Ej: PROMO2025)"
                    app:startIconDrawable="@drawable/regalo"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPromoCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btnRedeem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Canjear Código"
                        android:padding="14dp"
                        android:textSize="16sp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:elevation="10dp"/>
                </FrameLayout>

                <Button
                    android:id="@+id/btn_debug_generar_cupones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[DEV] GENERAR 20 CUPONES"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginTop="24dp"
                    app:icon="@drawable/ic_lock" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>