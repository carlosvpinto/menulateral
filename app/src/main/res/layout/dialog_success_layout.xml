<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingHorizontal="24dp"
    android:paddingBottom="8dp"
    android:gravity="center_horizontal">

    <!-- 1. La Imagen que quieres mostrar -->
    <ImageView
        android:id="@+id/success_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/aprobado"
        android:contentDescription="Pago exitoso"/>

    <!-- 2. El Título (ya no lo pondremos con .setTitle()) -->
    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¡Pago Verificado!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAppearance="@style/MaterialAlertDialog.Material3.Title.Text"
        android:textAlignment="center"/>

    <!-- 3. El Mensaje (ya no lo pondremos con .setMessage()) -->
    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:text="Tu suscripción ha sido activada exitosamente."
        android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
        android:textAlignment="center"/>

</LinearLayout>