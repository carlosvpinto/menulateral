<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="com.carlosv.dolaraldia.ui.pago.MercantilSearchActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back_24"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:title="Verificar Pago"
            app:titleCentered="true" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ingresa_los_datos_de_la_transacci_n_para_validarla"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- LinearLayout para agrupar el prefijo y el número de teléfono -->
            <LinearLayout
                android:id="@+id/layoutPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
                android:baselineAligned="false">

                <!-- Menú desplegable para los prefijos -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLayoutPhonePrefix"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="Prefijo">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompletePhonePrefix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="0414" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo para el resto del número de teléfono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLayoutPhoneNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:hint="Número">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="7" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- LinearLayout para CI/RIF -->
            <LinearLayout
                android:id="@+id/layoutCustomerId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutPhoneNumber"
                android:baselineAligned="false">

                <!-- Menú desplegable para el tipo de documento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLayoutIdType"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="Tipo">
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteIdType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="V" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo para el número del documento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textFieldLayoutCustomerIdNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:hint="@string/c_dula_de_identidad">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextCustomerIdNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="9" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Este es el TextInputLayout para el número de referencia.
      Ahora terminará ANTES del botón "Pegar". -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldLayoutReference"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:hint="@string/n_mero_de_referencia"
                app:layout_constraintTop_toBottomOf="@id/layoutCustomerId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textViewPaste"
                app:startIconDrawable="@drawable/ic_doc_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="20" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textViewPaste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pegar"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textFieldLayoutReference"
                app:layout_constraintBottom_toBottomOf="@id/textFieldLayoutReference" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldLayoutTransactionDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/fecha_de_la_transacci_n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textFieldLayoutReference"
                app:startIconDrawable="@drawable/ic_calendario">
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTransactionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldLayoutAmount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/monto_de_la_operaci_n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textFieldLayoutTransactionDate"
                app:startIconDrawable="@drawable/ic_monetization_on_24">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:textColor="?android:attr/textColorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSearch"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="@string/buscar_transacci_n"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textFieldLayoutAmount" />

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/result_background"
                android:padding="16dp"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSearch"
                tools:text="Resultado: Transacción encontrada con éxito."
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>