<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <!-- Indicador visual (la pequeña barra gris) -->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Opciones Premium"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <!-- Opción 1: Ver mi suscripción -->
    <TextView
        android:id="@+id/option_go_to_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Obtener Premium"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:drawableStartCompat="@drawable/premiun"
       />

    <TextView
        android:id="@+id/option_view_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="Ver estado de mi suscripción"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:drawableStartCompat="@drawable/ic_ver_premium"
        app:drawableTint="?attr/colorOnSurface" />

    <!-- Opción 2: Ir a suscribirse -->

</LinearLayout>