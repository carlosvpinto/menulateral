<!-- res/values-night/themes.xml (VERSIÓN FINAL Y LIMPIA) -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. TEMA PRINCIPAL PARA MODO OSCURO -->
    <style name="Theme.MENULATERAL" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores del Tema Oscuro -->
        <item name="colorPrimary">@color/md_theme_light_primary</item> <!-- Forzado al azul del modo claro -->
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <!-- ... (y todos los demás colores `md_theme_dark_...` de tu paleta) ... -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>

        <item name="android:activityOpenEnterAnimation">@anim/appear_from_top</item>

        <!-- Animación para la Activity que SALE de la pantalla -->
        <item name="android:activityOpenExitAnimation">@anim/stay_put</item>

        <!-- Animación para la Activity que vuelve a ENTRAR (al presionar "atrás") -->
        <item name="android:activityCloseEnterAnimation">@anim/stay_put</item>

        <!-- Animación para la Activity que SALE (al presionar "atrás") -->
        <item name="android:activityCloseExitAnimation">@anim/disappear_to_bottom</item>
    </style>

    <!-- Estilo para la BottomNavigationView (versión oscura) -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_icon_tint</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.MENULATERAL" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Estilo para los ítems del menú -->
    <!-- Agrega esto a tu styles.xml -->
    <style name="BottomSheetItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="drawableTint">?attr/colorPrimary</item> <!-- Tu color principal -->
    </style>

    <style name="BottomSheetDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:alpha">0.5</item>
    </style>




</resources>